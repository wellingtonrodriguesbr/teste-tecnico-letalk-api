generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Loan {
  id                       String   @id @default(uuid())
  customerDocumentNumber   String   @map("customer_document_number")
  customerBirthDate        DateTime @map("customer_birth_date")
  customerState            String   @map("customer_state")
  loanAmountRequested      String   @map("loan_amount_requested")
  interestRate             Float    @map("interest_rate")
  desiredInstallmentAmount String   @map("desired_installment_amount")
  installments             Int
  totalInterestRateAmount  String   @map("total_interest_rate_amount")
  totalAmount              String   @map("total_amount")
  loanMadeEffective        Boolean  @default(false) @map("loan_made_effective")
  createdAt                DateTime @default(now()) @map("created_at")

  loanInstallments LoanInstallments[]

  @@map("loans")
}

model LoanInstallments {
  id                 String   @id @default(uuid())
  outstandingBalance String   @map("outstanding_balance")
  interest           String
  adjustedBalance    String   @map("adjusted_balance")
  installmentAmount  String   @map("installment_amount")
  dueDate            DateTime @map("due_date")

  loanId String
  loan   Loan   @relation(fields: [loanId], references: [id], onDelete: Cascade)

  @@map("loan_installments")
}
